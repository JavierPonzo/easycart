<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 shadow-sm w-100" style="max-width: 500px; height: 750px;">
    <h1 class="mb-4 text-center">Card Information</h1>

    <%= form_with url: product_orders_path(@product), method: :post, class: "needs-validation", local: true do |f| %>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :name, "First Name", class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "John" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :last_name, "Last Name", class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control", placeholder: "Doe" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :address, "Address", class: "form-label" %>
        <%= f.text_field :address, class: "form-control", placeholder: "123 Main St" %>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :zip_code, "ZIP Code", class: "form-label" %>
          <%= f.text_field :zip_code, class: "form-control", placeholder: "12345" %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :province, "Province", class: "form-label" %>
          <%= f.text_field :province, class: "form-control", placeholder: "California" %>
        </div>
      </div>

      <!-- Country -->
      <div class="mb-3">
        <%= f.label :country, "Country", class: "form-label" %>
        <%= f.select :country, [["United States", "US"], ["Canada", "CA"], ["Mexico", "MX"]], { prompt: "Select your country" }, class: "form-control" %>
      </div>

      <hr class="my-4">

      <div class="mb-3">
        <%= f.label :card_number, "Card Number", class: "form-label" %>
        <%= f.text_field :card_number, class: "form-control", placeholder: "1234 5678 9012 3456", maxlength: 19 %>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :expiration_date, "Expiration Date", class: "form-label" %>
          <%= f.text_field :expiration_date, class: "form-control", placeholder: "MM/YY", maxlength: 5 %>
        </div>
        <div class="col-md-6 mb-3">
          <%= f.label :cvv, "CVV", class: "form-label" %>
          <%= f.text_field :cvv, class: "form-control", placeholder: "123", maxlength: 3 %>
        </div>
      </div>

      <div class="d-grid">
        <%= f.submit 'Buy Now', class: "btn btn-primary btn-lg" %>
      </div>

    <% end %>
  </div>
</div>
