
<div class="container">
  <div class="row d-flex justify-content-between">
    <% @orders.each do |order| %>
      <div class="co-4">
        <%#= link_to product_path(product), class:"text-decoration-none text-dark" do %>
          <div class="card-category">
            <%= order.product.title %>
            <%= order.product.price %>
          </div>
        <% end %>
      </div>
  </div>
</div>
