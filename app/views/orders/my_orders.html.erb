<h1 class="mb-5 mt-5 text-center text-shadow">My Orders</h1>
<div class="d-flex justify-content-center mb-4">
  <%= link_to 'Shop More Products', products_path, class: "btn btn-success btn-sm px-4 py-2 rounded-pill shadow-sm" %>
</div>
<div class="row container align-items-start" style="margin: 0 auto;">
  <% @orders.each do |order| %>
    <div class="col-md-4 col-lg-3 mb-4">
      <div class="card shadow-lg border-light h-100">
        <%= link_to product_path(order.product), class: "text-decoration-none text-dark" do %>
          <div class="card-body">
            <div class="d-flex justify-content-center mb-3">
              <%= cl_image_tag order.product.photos.first.key, crop: :fit, width: 200, height: 200, class: "rounded img-fluid bg-white" if order.product.photos.attached? %>
            </div>
            <h5 class="card-title text-center text-uppercase font-weight-bold">
              <%= order.product.title %>
            </h5>
            <div class="text-center mt-3">
              <p class="card-text mb-1">Price: <%= number_to_currency(order.product.price) %></p>
              <p class="card-text text-muted small">Order ID: <%= order.id %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
