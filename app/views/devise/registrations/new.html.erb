<h2 class="text-center mb-4 mt-5">Sign up</h2>

<div class="container-form w-50 shadow-lg p-5 rounded-5 mb-5 mt-5 mx-auto">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="mb-4">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "Email Address",
                    input_html: { autocomplete: "email", class: "form-control form-control-lg" } %>
      </div>

      <div class="mb-4">
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    label: "Password",
                    input_html: { autocomplete: "new-password", class: "form-control form-control-lg" } %>
      </div>

      <div class="mb-4">
        <%= f.input :password_confirmation,
                    required: true,
                    label: "Confirm Password",
                    input_html: { autocomplete: "new-password", class: "form-control form-control-lg" } %>
      </div>

      <div class="d-grid gap-2">
        <%= f.button :submit, "Sign up", class: "btn btn-primary btn-lg mt-5" %>
      </div>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
