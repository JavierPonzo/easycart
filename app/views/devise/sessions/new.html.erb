<h2 class= "text-center mt-5 mb-3">Log in</h2>
<div class="container-form shadow-lg w-50 rounded-5 p-5 mt-5 mb-5">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "form-control" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="d-grid mb-5">
      <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
    </div>
  <% end %>
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
