<h1 class="mb-4 mt-5">My Products</h1>

<%= link_to 'Create New Product', new_product_path, class: "btn btn-primary mb-4" %>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">

        <%= link_to product_path(product), class: "text-decoration-none text-dark" do %>

          <div class="card-body">
            <h5 class="card-title"><%= product.title %></h5>
            <p class="card-text"><%= number_to_currency(product.price) %></p>
          </div>

          <div class="card-footer bg-white d-flex justify-content-between align-items-center">


            <%= link_to edit_product_path(product), class: 'btn btn-warning btn-sm' do %>
              Edit
            <% end %>


            <%= link_to "Delete", product_path(product),
                data: { turbo_method: :delete,
                        turbo_confirm: "Are you sure you want to remove #{product.title} from your list?" },
                class: "btn btn-danger btn-sm" %>
          </div>

        <% end %>
      </div>
    </div>
  <% end %>
</div>
