<div class="container">
  <div class="row">
    <div class="col-4 shadow mt-4">
      <h1> <%= @product.title %></h1>
      <p>Price: <%= @product.price %></p>
      <% @product.photos.each do |photo| %>
      <%= image_tag photo, width: "200" %>
      <% end %>
      <p>Category: <%= @product.category %></p>
      <p>Description: <%= @product.description %></p>
      <p>Available: <%= @product.stock %></p>

    </div>
  </div>
<%= link_to "Back to home", products_path %>
  <%= link_to 'Buy now', new_product_order_path(@product), class: "btn btn-secondary" %>

</div>
