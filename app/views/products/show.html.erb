<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-6 left-column">
      <div id="product-slider" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% @product.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= 'active' if index.zero? %>">
              <%= image_tag url_for(photo), class: "d-block w-100 rounded", alt: @product.title %>
            </div>
          <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#product-slider" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#product-slider" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>

    <div class="col-md-6 right-column">
      <div class="product-description">
        <h1 class="product-title"><%= @product.title %></h1>
        <p class="product-price">Price: <%= number_to_currency(@product.price) %></p>
        <p class="product-category"><strong>Category:</strong> <%= @product.category %></p>
        <p class="product-description-text"><strong>Description:</strong> <%= @product.description %></p>
        <p class="product-stock"><strong>Stock:</strong> <%= @product.stock %> items</p>
      </div>
      <div class="product-actions">
        <%= button_to "Buy Now", create_checkout_session_order_path(product_id: @product.id),
                     method: :post,
                     data: { turbo: false },
                     class: "btn btn-primary w-100 mb-3" %>
        <%= link_to "Back to Home", products_path, class: "btn btn-outline-secondary w-100" %>
      </div>
    </div>
  </div>
</div>
