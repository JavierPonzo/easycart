<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 shadow-sm w-100" style="max-width: 500px; height: 750px;">
    <h1 class="mb-4 text-center">Create New Product</h1>


        <%= simple_form_for @product do |f| %>
          <div class="mb-3">
            <%= f.label :title, "Product Title", class: "form-label fw-bold" %>
            <%= f.input_field :title, class: "form-control border-success border-2", placeholder: "Enter product title" %>
          </div>

          <div class="mb-3">
            <%= f.label :price, "Price", class: "form-label fw-bold" %>
            <%= f.input_field :price, class: "form-control border-success border-2", placeholder: "Enter product price" %>
          </div>

          <div class="mb-3">
            <%= f.label :category, "Category", class: "form-label fw-bold" %>
            <%= f.input_field :category, class: "form-control border-success border-2", placeholder: "Enter product category" %>
          </div>

          <div class="mb-3">
            <%= f.label :stock, "Stock Quantity", class: "form-label fw-bold" %>
            <%= f.input_field :stock, class: "form-control border-success border-2", placeholder: "Enter stock quantity" %>
          </div>

          <div class="mb-3">
            <%= f.label :description, "Description", class: "form-label fw-bold" %>
            <%= f.text_area :description, class: "form-control border-success border-2", rows: 3, placeholder: "Enter product description" %>
          </div>

          <div class="mb-3">
            <%= f.label :photos, "Upload Photos", class: "form-label fw-bold" %>
            <%= f.input_field :photos, type: :file, class: "form-control border-success border-2", multiple: true %>
          </div>

          <div class="d-grid mt-4">
            <%= f.submit "Update Product", class: "btn btn-success btn-lg fw-bold" %>
          </div>
        <% end %>
        <%= link_to 'Back to My Products', products_path(@product), class: 'btn btn-secondary btn-lg fw-bold text-center mb-5' %>
      </div>
    </div>
